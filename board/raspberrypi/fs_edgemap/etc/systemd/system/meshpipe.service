[Unit]
Description=meshpipe
After=multi-user.target ws-msgchannel.service bootstrap.service opt-boot.mount mnt.mount

[Service]
WorkingDirectory=/opt/edgemap/meshpipe
KillMode=process
ExecStart=/bin/python3 meshpipe.py --port=/dev/ttyACM0
Restart=always
RestartSec=15
TimeoutStartSec=5

[Install]
WantedBy=multi-user.target
