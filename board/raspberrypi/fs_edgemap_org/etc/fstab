
/dev/root / auto rw 0 1

# boot partition (rw for development)
/dev/mmcblk0p1 /opt/boot auto rw,defaults,x-systemd.automount,x-systemd.device-timeout=10s,noatime,noauto 0 2

# MicroSD (not initramfs version)
/dev/mmcblk0p3 /opt/data auto rw,defaults,x-systemd.automount,x-systemd.device-timeout=10s,noatime,noauto 0 2

# External USB drive
# /dev/sda1 /mnt auto ro,defaults,x-systemd.automount,x-systemd.device-timeout=10s,noatime,noauto 0 2

